{
  "license": "MIT",
  "compilerOptions": {
    "verbatimModuleSyntax": true
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 120,
      "proseWrap": "always",
      "semiColons": true,
      "singleQuote": false,
      "useTabs": false
    },

    "include": ["**/*.ts", "**/*.json"],
    "exclude": ["node_modules", "vendor", "**/dist", "**/external/storage"]
  },
  "lint": {
    "rules": {
      "include": ["verbatim-module-syntax"],
      "exclude": [
        "no-namespace",
        "no-explicit-any",
        "no-empty-interface",
        "no-empty",
        "ban-types"
      ]
    }
  },
  "vendor": true,
  "workspace": {
    "members": ["apps/preview", "libs/engine"]
  },
  "tasks": {
    "build:preview": {
      "description": "Build the preview application",
      "command": "deno task -f preview build"
    },
    "dev:preview": {
      "description": "Run development server for preview",
      "command": "deno task -f preview dev"
    },
    "preview:preview": {
      "description": "Preview the built preview application",
      "command": "deno task -f preview preview"
    }
  },
  "imports": {
    "@rsbuild/core": "npm:@rsbuild/core@^1.3.15",
    "@std/fs": "jsr:@std/fs@1.0.17",
    "@std/dotenv": "jsr:@std/dotenv@0.225.3",
    "@cliffy/ansi": "jsr:@cliffy/ansi@1.0.0-rc.7",
    "@std/path": "jsr:@std/path@1.0.9",
    "@std/testing": "jsr:@std/testing@1.0.12",
    "@std/expect": "jsr:@std/expect@1.0.16"
  }
}
